<div id="order-confirmation">
  <h1>Your order is on its way!</h1>

  <h3> Receipt for Order No. <%= @order.id %> from <%= @order.created_at %></h3>
  <br>
  <div id="order-wrapper">
  
        <% @order.order_items.each do |i| %>
          <p><%= i.item.name %> |
          
          Unit Price: <%= number_to_currency i.item.price %> | Quantity: <%= i.quantity %></p>
        <% end %>
      <% cart_total = 0 %>
        <% @order.order_items.each do |i|%>
          <% cart_total = cart_total + i.item.price * i.quantity.to_i %>
          <% end %>
          <font size = 4>Order Total: <%=number_to_currency cart_total %></font>
       
      
    
    <br>
    <br>
  <a href = '/'><button type="button" class="btn btn-danger btn-md">Go Home</button></a>

</div>